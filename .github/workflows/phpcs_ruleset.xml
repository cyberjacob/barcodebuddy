<?xml version="1.0"?>
<ruleset name="Barcode Buddy Standard">
  <!-- Include everything by default -->
  <file>.</file>
  
  <!-- Exclude dependencies -->
  <exclude-pattern>incl/authentication/composer/vendor</exclude-pattern>
  <exclude-pattern>incl/websocket/php-websocket</exclude-pattern>
  <exclude-pattern>incl/websocket/php-websocket-1.0</exclude-pattern>
  
  <!-- Enable output colours -->
  <arg name="colors"/>
  
  <!-- Inherit the default standard -->
  <rule ref="PEAR">
    <!-- Disable some rules for file header tags that are not in use -->
    <exclude name="PEAR.Commenting.FileComment.MissingCategoryTag" />
    <exclude name="PEAR.Commenting.FileComment.MissingPackageTag" />
    <exclude name="PEAR.Commenting.FileComment.MissingLinkTag" />
    
    <!-- No not require author headers to include their email address -->
    <exclude name="PEAR.Commenting.FileComment.InvalidAuthors" />
  </rule>
  
  <!-- Override the maximum line length to a sensible modern value -->
  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="120"/>
      <property name="absoluteLineLimit" value="130"/>
    </properties>
  </rule>

</ruleset>
